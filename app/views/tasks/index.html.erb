<legend>Listing tasks</legend>
<div class="row">
<div id="tasks" class="span7">
<table class="table">
  <tr>
    <th>Name</th>
    <th>Priority</th>
    <th>Due date</th>
    <th></th>
    <th></th>
  </tr>

<% current_user.tasks.where.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.priority %></td>
    <td><%= task.due_date %></td>
    <td><%= link_to 'Edit', edit_task_path(task),{'data-toggle'=>'modal'} %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>
</div>

<a href="#task-form" class="btn btn-primary btn-small" data-toggle="modal" >New task </a>

<!-- Modal Form for New Task -->
<div class="modal hide fade" id="task-form">
  <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>New Task</h3>
    </div>
    <div class="modal-body">
      <%= render "form" %>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</a>
      <a href="#" onclick="$('#new-task-form').submit()" class="btn btn-primary">Aceptar</a>
    </div>
  
</div>
